HOST=0.0.0.0
PORT=1337

# --- Secrets da aplicação ---
# Gere cada um com: node -e "console.log(require('crypto').randomBytes(16).toString('base64'))"
# APP_KEYS: gere 4 valores e separe por vírgula
APP_KEYS="toBeModified1,toBeModified2,toBeModified3,toBeModified4"
API_TOKEN_SALT=tobemodified
ADMIN_JWT_SECRET=tobemodified
TRANSFER_TOKEN_SALT=tobemodified
JWT_SECRET=tobemodified
ENCRYPTION_KEY=tobemodified

# --- Banco de dados ---
# Para desenvolvimento local com SQLite (padrão):
DATABASE_CLIENT=sqlite
DATABASE_FILENAME=.tmp/data.db

# Para produção com PostgreSQL (Docker):
# DATABASE_CLIENT=postgres
# DATABASE_HOST=postgres        # nome do serviço no docker-compose
# DATABASE_PORT=5432
# DATABASE_NAME=strapi
# DATABASE_USERNAME=strapi
# DATABASE_PASSWORD=sua_senha_segura
# DATABASE_SSL=false

# Variáveis do container PostgreSQL (usadas pelo docker-compose):
# POSTGRES_DB=strapi
# POSTGRES_USER=strapi
# POSTGRES_PASSWORD=sua_senha_segura
